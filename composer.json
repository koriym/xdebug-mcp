{
    "name": "xdebug-mcp/server",
    "description": "MCP server for controlling PHP Xdebug debugging sessions",
    "type": "library",
    "require": {
        "php": ">=8.0",
        "ext-sockets": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "XdebugMcp\\": "src/",
            "XdebugMcp\\Tests\\Fake\\": "tests/fake/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XdebugMcp\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/xdebug-mcp"
    ]
}