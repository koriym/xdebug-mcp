{
    "name": "koriym/xdebug-mcp",
    "description": "MCP server for controlling PHP Xdebug debugging sessions",
    "type": "library",
    "require": {
        "php": ">=8.0",
        "ext-sockets": "*",
        "ext-xml": "*",
        "symfony/polyfill-php83": "^1.33"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vimeo/psalm": "^6.13"
    },
    "autoload": {
        "psr-4": {
            "Koriym\\XdebugMcp\\": "src/",
            "Koriym\\XdebugMcp\\Tests\\Fake\\": "tests/fake/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Koriym\\XdebugMcp\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/xdebug-mcp",
        "bin/xdebug-server",
        "bin/xdebug-trace",
        "bin/xdebug-profile",
        "bin/xdebug-coverage",
        "bin/xdebug-phpunit"
    ]
}
